<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Task">
        <attr name="android:src" format="reference" />
        <attr name="android:text" format="string" />
        <attr name="android:textSize" format="dimension" />
        <attr name="android:textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ExpandableLayout">
        <attr name="android:text" format="string" />
        <attr name="android:textSize" format="dimension" />
        <attr name="android:textColor" format="color" />
        <!-- A drawable to use as the background.  This can be either a reference
             to a full drawable resource (such as a PNG image, 9-patch,
             XML state list description, etc), or a solid color such as "#ff000000"
            (black). -->
        <attr name="android:background" format="reference|color" />
        <!-- a solid color such as "#ff000000" (black). -->
        <attr name="chevron_color" format="color" />
        <attr name="android:state_expanded" format="boolean" />
    </declare-styleable>
    <declare-styleable name="TaskBuilder_Layout">
        <!-- Specifies the basic width of the Task Menu view.  This is an optional attribute.
             This defaults to match_parent. Its value may be a dimension (such as "12dip")
             for a constant width or one of the special constants. -->
        <attr name="taskMenu_layout_width" format="dimension">
            <!-- The view should be as big as its parent (minus padding).
                 This constant is deprecated starting from API Level 8 and
                 is replaced by {@code match_parent}. -->
            <enum name="fill_parent" value="-1" />
            <!-- The view should be as big as its parent (minus padding).
                 Introduced in API Level 8. -->
            <enum name="match_parent" value="-1" />
            <!-- The view should be only big enough to enclose its content (plus padding). -->
            <enum name="wrap_content" value="-2" />
        </attr>

        <!-- Specifies the basic height of the Task Menu view.  This is an optional attribute.
             This defaults to match_parent. Its value may be a dimension (such as "12dip")
             for a constant width or one of the special constants. -->
        <attr name="taskMenu_layout_height" format="dimension">
            <!-- The view should be as big as its parent (minus padding).
                 This constant is deprecated starting from API Level 8 and
                 is replaced by {@code match_parent}. -->
            <enum name="fill_parent" value="-1" />
            <!-- The view should be as big as its parent (minus padding).
                 Introduced in API Level 8. -->
            <enum name="match_parent" value="-1" />
            <!-- The view should be only big enough to enclose its content (plus padding). -->
            <enum name="wrap_content" value="-2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="TaskBuilder_Parameters">
        <!-- The placeholder text -->
        <attr name="android:text" format="string" />
        <attr name="android:textSize" format="dimension" />
        <attr name="android:textColor" format="color" />
        <!-- A drawable to use as the background.  This can be either a reference
             to a full drawable resource (such as a PNG image, 9-patch,
             XML state list description, etc), or a solid color such as "#ff000000"
            (black). -->
        <attr name="android:background" format="reference|color" />
        <!-- A drawable to use as the background.  This can be either a reference
             to a full drawable resource (such as a PNG image, 9-patch,
             XML state list description, etc), or a solid color such as "#ff000000"
            (black). -->
        <attr name="taskMenu_background" format="reference|color" />
        <!-- Whether to initially show the Task Menu -->
        <attr name="showTaskMenu" format="boolean" />
        <!-- A semicolon ( ; ) separated list of View's
         that should not be seen as valid Tasks.
          this might include Header's, Expandable Views (such as ListView)
          or other views. -->
        <attr name="nonTaskViews" format="string" />
    </declare-styleable>
</resources>
