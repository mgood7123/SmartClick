<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TaskBuilder_Layout">
        <!-- Specifies the basic width of the Task Menu view.  This is an optional attribute.
             This defaults to match_parent. Its value may be a dimension (such as "12dip")
             for a constant width or one of the special constants. -->
        <attr name="taskMenu_layout_width" format="dimension">
            <!-- The view should be as big as its parent (minus padding).
                 This constant is deprecated starting from API Level 8 and
                 is replaced by {@code match_parent}. -->
            <enum name="fill_parent" value="-1" />
            <!-- The view should be as big as its parent (minus padding).
                 Introduced in API Level 8. -->
            <enum name="match_parent" value="-1" />
            <!-- The view should be only big enough to enclose its content (plus padding). -->
            <enum name="wrap_content" value="-2" />
        </attr>

        <!-- Specifies the basic height of the Task Menu view.  This is an optional attribute.
             This defaults to match_parent. Its value may be a dimension (such as "12dip")
             for a constant width or one of the special constants. -->
        <attr name="taskMenu_layout_height" format="dimension">
            <!-- The view should be as big as its parent (minus padding).
                 This constant is deprecated starting from API Level 8 and
                 is replaced by {@code match_parent}. -->
            <enum name="fill_parent" value="-1" />
            <!-- The view should be as big as its parent (minus padding).
                 Introduced in API Level 8. -->
            <enum name="match_parent" value="-1" />
            <!-- The view should be only big enough to enclose its content (plus padding). -->
            <enum name="wrap_content" value="-2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="TaskBuilder_Parameters">
        <attr name="showTaskMenu" format="boolean" />
    </declare-styleable>
</resources>
